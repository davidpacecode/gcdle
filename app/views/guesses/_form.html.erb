<%= form_with(model: guess, class: "contents") do |form| %>
  <% if guess.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(guess.errors.count, "error") %> prohibited this guess from being saved:</h2>

      <ul class="list-disc ml-6">
        <% guess.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :game_id %>
    <%= form.text_field :game_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": guess.errors[:game_id].none?, "border-red-400 focus:outline-red-600": guess.errors[:game_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :value %>
    <%= form.text_field :value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": guess.errors[:value].none?, "border-red-400 focus:outline-red-600": guess.errors[:value].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :guess_number %>
    <%= form.number_field :guess_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": guess.errors[:guess_number].none?, "border-red-400 focus:outline-red-600": guess.errors[:guess_number].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
